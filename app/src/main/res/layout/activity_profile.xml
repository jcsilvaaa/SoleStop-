<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar with Back Button -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/brand_red"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Profile"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:contentDescription="Profile Logo"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/nameProfileInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:padding="12dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/emailProfileInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/addressProfileInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Shipping Address"
            android:padding="12dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/saveProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:backgroundTint="@color/brand_red_dark"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
